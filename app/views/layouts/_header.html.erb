<style>
    header {
        width: 100%;
        height: 100px;
        background-color: #CCCCCC;
        display: inline-flex;
    }
    .header_point {
        font-size: 20px;
        color: black;
        margin-right: 60px;
    }
    .center {
        display: flex;
        align-items: center;
    }
</style>

<header>
  <div class="center">
    <ul>
      <li><p class="header_point"> <%= link_to 'Главная', announcements_path %> </p></li>
      <li><p class="header_point"><%= link_to 'Пользователи', users_path_url %></p>  </li>

      <li>
        <p class="header_point">
        <% if(user_signed_in?) %>
          You're signed with <%= current_user.email %> |
          <%= link_to 'Выйти', destroy_user_session_path, method: :delete, data: { confirm: 'Do you want to exit?' } %>
        <% else %>
          <%= link_to 'Войти', new_user_session_path %>
        <% end %>
        </p>
      </li>

      <% if current_user&.admin? %>
        <li style="font-size: 16px;">
          <%= link_to "Roles", roles_path %>
        </li>
      <% end %>
    </ul>
  </div>

</header>