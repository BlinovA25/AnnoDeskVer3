<style>
    li {
        float: left;
        padding: 30px;
        list-style: none;
        font-size: 18px;
        font-style: italic;
        font-color: black;
        position: relative;
    }
    header {
        width: 100%;
        height: 80px;
        background-color: #2499e3;
        justify-content: center;
    }
</style>

<header>
  <div>
    <ul>
      <li> <%= link_to 'Главная', announcements_path %> </li>
      <li> <%= link_to 'Пользователи', users_path_url %> </li>
      <li>
        <% if(user_signed_in?) %>
          <!--%= link_to 'Мой профиль', edit_user_path(current_user) %-->
        <% else %>
          <%= link_to 'Войти', new_user_session_path %>
        <% end %>
      </li>
      <li>
        <% if(user_signed_in?) %>
          You're signed with <%= current_user.email %>
        <% end %>
      </li>
      <li>
        <% if(user_signed_in?) %>
          <%= link_to 'Выйти', destroy_user_session_path, method: :delete, data: { confirm: 'Do you want to exit?' } %>
        <% end %>
      </li>

      <% if current_user&.admin? %>
        <li style="font-size: 16px;">
          <%= link_to "Roles", roles_path %>
        </li>
      <% end %>
    </ul>
  </div>

</header>