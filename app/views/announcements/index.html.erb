<p id="notice"><%= notice %></p>

<h1>Announcements</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Text</th>
      <th>User</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td>
          <img style="width: 150px;" src="<%= announcement.picture %>"/>
        </td>
        <td><%= announcement.text %></td>
        <td><%= announcement.user.fullname %></td>

        <td><%= link_to 'Show', announcement %></td>
        <td>
          <% if can? :update, announcement %>
            <%= link_to 'Edit', edit_announcement_path(announcement) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, announcement %>
            <%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Announcement', new_announcement_path %>
